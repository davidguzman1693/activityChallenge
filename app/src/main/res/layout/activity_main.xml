<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/text_one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_one"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30dp"
        android:layout_above="@id/text_two_button"
        android:onClick="showText"
        android:textColor="@android:color/white"
        android:padding="30dp"
        />

    <Button
        android:id="@+id/text_two_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_two"
        android:layout_centerInParent="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:onClick="showText"
        android:padding="30dp"
        />

    <Button
        android:id="@+id/text_three_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_three"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_two_button"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:background="@android:color/holo_green_light"
        android:onClick="showText"
        android:textColor="@android:color/white"
        android:padding="30dp"
        />

</RelativeLayout>